<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_title">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.head.views.ui.edittext.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_edit_text" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.head.views.ui.button.ButtonFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_button" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.head.views.ui.spinner.SpinnerFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_spinner" />
    <fragment
        android:id="@+id/navigation_title"
        android:name="com.head.views.ui.title.TitleFragment"
        android:label="fragment_title"
        tools:layout="@layout/fragment_title" />
</navigation>