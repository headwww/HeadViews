<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.head.view.HeadTitleBar
        android:id="@+id/headTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        app:elevation="10dp"
        app:headTitleBarBackgroundColor="#FFFFFF"
        app:headTitleBarCustomView="@layout/item_title"
        app:headTitleBarFill="true"
        app:headTitleBarTransparent="true"
        app:headTitleBarGradientFrom="#2BB3F1"
        app:headTitleBarGradientTo="#008EFF"
        app:headTitleBarSupportGradient="true"
        app:headTitleBarTheme="light"
        app:headTitleGeneralCenterMainMarquee="true"
        app:headTitleGeneralCenterMainText="主标题"
        app:headTitleGeneralCenterMainTextColor="#FF5722"
        app:headTitleGeneralCenterMainTextSize="18dp"
        app:headTitleGeneralCenterSubText="次标题"
        app:headTitleGeneralCenterSubTextColor="#020202"
        app:headTitleGeneralLeftIcon="@drawable/ic_baseline_chevron_left_24"
        app:headTitleGeneralLeftText="返回"
        app:headTitleGeneralLeftTextColor="#FFFFFF"
        app:headTitleGeneralLeftTextSize="18dp"
        app:headTitleGeneralRightIcon="@drawable/ic_baseline_search_24"
        app:headTitleGeneralRightTextColor="#000000"
        app:headTitleGeneralRightTextSize="18dp"
        app:headTitleStyle="general"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/nav_host_fragment_activity_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />


</LinearLayout>